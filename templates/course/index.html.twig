{% extends 'base.html.twig' %}

{% block title %}StudyOn{% endblock %}

{% block body %}
    <h1 class="fw-bold mb-5 mt-5">Курсы</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for course in courses %}
            <div class="col course-card">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">{{ course.nameCourse }}</h4>
                        <p class="card-text">{{ course.descriptionCourse }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary w-10 course-link"><strong>Перейти</strong></a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class=card-text">Курсов не найдено =(</p>
        {% endfor %}
    </div>
    <hr class="mt-5">
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('app_course_new') }}" type="button" class="btn btn-secondary mb-5 new-course-link"><strong>Новый курс</strong></a>
    {% endif %}
{% endblock %}
