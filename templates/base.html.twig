<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar sticky-top navbar-light bg-light shadow ">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" href="{{ path('app_course_index') }}">
                    <h3>StudyOn</h3>
                </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="mx-5">
                        <a class="mx-2" href="{{ path('app_profile') }}">Профиль</a>
                        <a class="mx-2" href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                {% else  %}
                    <div class="mx-5">
                        <a class="mx-2" href="{{ path('app_login') }}">Войти</a>/
                        <a class="mx-2" href="{{ path('app_register') }}">Зарегистрироваться</a>
                    </div>
                {% endif %}
                {#{% block actions %}
                {% endblock %}#}
            </div>

        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
