{% extends 'base.html.twig' %}

{% block title %} {{ lesson.nameLesson }} / {{ lesson.idCourse.nameCourse }} / StudyOn {% endblock %}

{% block body %}
    <h1 class="fw-bold mb-5 mt-5">{{ lesson.nameLesson }}</h1>

    <div class="d-flex">
        <p>Курс:</p>
        <a href="{{ path('app_course_show', {'id': lesson.idcourse.id }) }}" class="text-decoration-none mx-4">{{ lesson.idCourse.nameCourse }}</a>
    </div>
    <div class="d-flex">
        <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}" type="button" class="btn btn-secondary mx-1">
            <strong>Редактировать</strong>
        </a>
        {{ include('lesson/_delete_form.html.twig') }}
    </div>

    <hr class="mt-5">
    <div class="card">
        <div class="card-body">
            <div class="d-flex">
                <p>Содержимое урока:</p>
                <p class="mx-4">{{ lesson.contentLesson }}</p>
            </div>
        </div>
    </div>
{% endblock %}
