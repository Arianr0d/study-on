{% extends 'base.html.twig' %}

{% block title %}StudyOn / Профиль{% endblock %}

{% block body %}
    <h1 class="fw-bold mb-5 mt-5">Профиль {{ user.username }}</h1>

    <div class="d-flex">
        <p>Роль:</p>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <p class="mx-3">Администратор</p>
        {% else %}
            <p class="mx-3">Пользователь</p>
        {% endif %}
    </div>
    <div class="d-flex">
        <p>Баланс: </p>
        <p class="mx-3"> {{ user.balance }} рублей</p>
    </div>

    <hr class="mt-5">
    <a href="{{ path('app_course_index') }}" type="button" class="btn btn-primary mx-1">
        <strong>На главную</strong>
    </a>
{% endblock %}